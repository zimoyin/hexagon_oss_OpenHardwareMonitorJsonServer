<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net8.0-windows</TargetFramework>
		<RuntimeIdentifier>win-x64</RuntimeIdentifier>
		<RootNamespace>hexagon_oss_OpenHardwareMonitorJsonServer</RootNamespace>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<ApplicationManifest>app.manifest</ApplicationManifest>
	</PropertyGroup>

	<ItemGroup>
		<Reference Include="Microsoft.Extensions.Logging.Abstractions">
			<HintPath>Lib\Microsoft.Extensions.Logging.Abstractions.dll</HintPath>
		</Reference>
		<Reference Include="Newtonsoft.Json">
			<HintPath>Lib\Newtonsoft.Json.dll</HintPath>
		</Reference>
		<Reference Include="OpenHardwareMonitorLib">
			<HintPath>Lib\OpenHardwareMonitorLib.dll</HintPath>
		</Reference>
		<Reference Include="System.IO.Ports">
			<HintPath>Lib\System.IO.Ports.dll</HintPath>
		</Reference>
		<Reference Include="System.Management">
			<HintPath>Lib\System.Management.dll</HintPath>
		</Reference>
	</ItemGroup>

</Project>